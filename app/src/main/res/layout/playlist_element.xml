<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_4"
    android:layout_marginBottom="@dimen/spacing_16"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/playlist_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_playlist_icon"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/placeholder"
             />

    <TextView
        android:id="@+id/playlist_name"
        style="@style/PlaylistPreviewTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_16"
        android:layout_marginTop="@dimen/spacing_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_icon"
        tools:text="Сборник самолучших плясовых Хоббитона - самое оно для похода на Изенгард" />

    <TextView
        android:id="@+id/playlist_count"
        style="@style/PlaylistPreviewTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        tools:text="100500 треков" />

</androidx.constraintlayout.widget.ConstraintLayout>