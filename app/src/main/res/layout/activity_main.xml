<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heading_height"
        android:layout_marginBottom="@dimen/spacing_24"
        android:fontFamily="@font/ys_display_medium"
        android:paddingVertical="@dimen/spacing_14"
        android:paddingHorizontal="@dimen/spacing_16"
        android:text="@string/app_name_display"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_normal" />


    <Button
        android:id="@+id/search"
        style="@style/MainActivityButtonStyle"
        android:text="@string/search"
        app:icon="@drawable/magnifier" />

    <Button
        android:id="@+id/media_library"
        style="@style/MainActivityButtonStyle"
        android:text="@string/media_library"
        app:icon="@drawable/musical_note" />

    <Button
        android:id="@+id/settings"
        style="@style/MainActivityButtonStyle"
        android:text="@string/settings"
        app:icon="@drawable/cogwheel" />

</LinearLayout>