<resources>
    <!-- Application dark theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/night_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/night_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="android:statusBarColor">@color/night_dark</item>
        <item name="colorOnSurfaceInverse">@color/black_2</item>
        <item name="materialAlertDialogTheme">@style/DayNightAlertDialog</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarButtonStyle</item>
    </style>

    <style name="DayNightSwitchStyle" parent="SwitchStyle">
        <item name="thumbTint">@color/brilliant_blue</item>
        <item name="trackTint">@color/brilliant_blue_light</item>
    </style>

    <style name="ToolbarButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="DayNightAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:dialogCornerRadius">@dimen/radius_4dp</item>
        <item name="colorPrimary">@color/brilliant_blue</item>
        <item name="buttonBarStyle">@style/DialogButtonBar</item>
    </style>
</resources>