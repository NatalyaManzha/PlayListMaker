<resources>

    <style name="TextInputEditTextStyle">
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSelectHandle">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnTertiary</item>
        <item name="hintTextColor">@color/focused_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_4dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_4dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_4dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_4dp</item>
        <item name="boxStrokeColor">@color/focused_color</item>
        <item name="boxStrokeWidth">@dimen/stroke_1dp</item>
    </style>

    <style name="SettingsMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
    </style>

    <style name="SettingsMenuItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SettingsMenuItemIconStyle">
        <item name="android:layout_width">@dimen/icon_size_normal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="trackTintMode">src_in</item>

    </style>

    <style name="HeaderTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/item_size_20</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlaylistPreviewTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="UpdateButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnTertiary</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@string/update</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/radius_54dp</item>
    </style>

    <style name="PlayerInfoNameTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="PlayerInfoValueTextStyle" parent = "PlayerInfoNameTextStyle">
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <style name="BottomNavigationItemStyle" parent="Base.Widget.Material3.BottomNavigationView">
        <item name="itemPaddingTop">@dimen/spacing_8</item>
        <item name="itemPaddingBottom">@dimen/spacing_10</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemActiveIndicatorStyle">@style/ItemActiveIndicatorStyle</item>
        <item name="itemTextAppearanceActive">@style/ItemTextAppearanceActiveStyle</item>
        <item name="itemTextAppearanceInactive">@style/ItemTextAppearanceInactiveStyle</item>
        <item name="itemIconTint">@color/item_color</item>
        <item name="itemTextColor">@color/item_color</item>
    </style>

    <style name="ItemTextAppearanceInactiveStyle">
        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemTextAppearanceActiveStyle" parent="ItemTextAppearanceInactiveStyle">
        <item name="itemTextColor">@color/brilliant_blue</item>
    </style>

    <style name="ItemActiveIndicatorStyle" >
        <item name="itemIconTint">@color/brilliant_blue</item>
    </style>

    <style name="ItemInactiveIndicatorStyle">
        <item name="itemIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="DialogButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:paddingStart">160dp</item>
    </style>

</resources>